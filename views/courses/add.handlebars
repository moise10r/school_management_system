<div class="container-fluid" id="container-fluid">
    <form id="addCourse" action="/courses/add" method="POST" class="form-edit-course needs-validations" novalidate>
        {{#each errors}}
        <div class="alert alert-danger custom-alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close" style="margin-top:0px;">
                <span aria-hidden="true">&times;</span>
            </button>
            <div class="media">
                <i class="fa fa-exclamation-triangle fa-2x" aria-hidden="true"></i>
                <div class="media-body ml-4 mt-1">
                    <strong>{{text}}</strong>
                </div>
            </div>
        </div>
        {{/each}}

        <h4>Add New Course</h4>
        <hr>
        <div class="form-group">
            <label for="departmentName">Department</label>
            <select name="departmentName" class="form-control custom-select" required>
                {{#select body.departmentName}}
                <option value="">Choose...</option>
                {{#each dept}}
                <option value="{{dname}}">{{dname}}</option>
                {{/each}}
                {{/select}}

            </select>
        </div>
        <div class="form-row">
            <div class="form-group col-md-8">
                <label for="courseName">Course Name</label>
                <input type="text" name="courseName" class="form-control" value="{{body.courseName}}" placeholder="Course Name"
                    required>
            </div>
            <div class="form-group col-md-4">
                <label for="courseDuration">Duration (in years)</label>
                <input type="text" name="courseDuration" class="form-control" value="{{body.courseDuration}}"
                    placeholder="Duration" required>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="startDate">Start Date</label>
                <input type="text" id="datepicker" class="form-control" value="{{body.startDate}}" name="startDate"
                    placeholder="Enter Start Date" required>
            </div>
            <div class="form-group col-md-6">
                <label for="endDate">End Date</label>
                <input type="text" id="datepicker2" class="form-control" value="{{body.endDate}}" name="endDate"
                    placeholder="Enter End Date" required>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="courseFee">Course Fee (Per Semester)</label>
                <input type="text" name="courseFee" class="form-control" value="{{body.courseFee}}" placeholder="Course Fee"
                    required>
            </div>
            <div class="form-group col-md-6">
                <label for="intake">Intake (No. of Seats)</label>
                <input type="text" name="intake" class="form-control" value="{{body.intake}}" placeholder="No. Of seats"
                    required>
            </div>
        </div>
        <button type="submit" class="btn btn-default btn-lg btn-block">Add New Course
            &nbsp;&nbsp;
            <i class="fa fa-save fa-lg"></i>
        </button>

    </form>
</div>