<div class="container-fluid">
    <form action="/users/signup" method="POST" class="form-signup">

        {{#each errors}}
        <div class="alert alert-danger alert-dismissible fade show custom-alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close" style="">
                <span aria-hidden="true">&times;</span>
            </button>
            <div class="media">
                <i class="fa fa-exclamation-triangle fa-3x" aria-hidden="true"></i>
                <div class="media-body ml-4">
                    <h6 class="mt-2" style="line-height:5px;"><strong>{{text}}</strong></h6>
                    Change a few things up and try submitting again.
                </div>
            </div>
        </div>
        {{/each}}

        <h3>Create an account</h3>
        <p>Note: Registrations only for authorized members will be approved.</p>

        <hr>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="name">Full Name</label>
                <input type="text" class="form-control" name="name" value="{{body.name}}" placeholder="Full Name">
            </div>
            <div class="form-group col-md-6">
                <label for="name">Email Address</label>
                <input type="email" class="form-control" name="email" value="{{body.email}}" placeholder="Personal Email">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label for="designation">Profile</label>
                <select name="role" class="form-control custom-select">
                    {{#select body.role}}
                    <option value="">Choose...</option>
                    <option value="Teacher">Teacher</option>
                    <option value="Principal">Principal</option>
                    <option value="Accountant">Accountant</option>
                    {{/select}}
                </select>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="Password">Password</label>
                <input type="text" class="form-control" name="password" value="{{body.password}}" placeholder="Password">
            </div>
            <div class="form-group col-md-6">
                <label for="ConfirmPassword">Confirm Password</label>
                <input type="text" class="form-control" name="password2" value="{{body.password2}}" placeholder="Confirm Password">
            </div>
            <small id="passwordHelpBlock" class="form-text text-muted">
                Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces,
                special characters,
                or emoji.
            </small>
        </div>

        <div class="form-row">
            <button type="submit" class="btn btn-default btn-lg btn-block" style="margin-bottom:10px;">Sign
                up</button>
        </div>
    </form>
</div>

<script>
    setTimeout(function () {
        $(".alert").alert('close')
    }, 5000);
</script>